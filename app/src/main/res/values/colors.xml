<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Your app's branding colors (examples) -->
    <color name="primaryColor">#007AFF</color> <!-- A nice blue for primary actions -->
    <color name="primaryDarkColor">#005bb5</color> <!-- A darker shade for status bar, etc. -->
    <color name="primaryLightColor">#63a4ff</color> <!-- A lighter shade if needed -->
    <color name="secondaryColor">#FF6600</color> <!-- An orange for secondary accents (FABs, etc.) -->
    <color name="secondaryDarkColor">#c43600</color>
    <color name="secondaryLightColor">#ff983f</color>

    <!-- Basic Theme Colors -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="light_gray">#F5F5F5</color> <!-- Very light gray for subtle backgrounds or dividers -->
    <color name="medium_gray">#B0B0B0</color> <!-- For icons or less important text -->
    <color name="dark_gray">#333333</color> <!-- For primary text on white backgrounds -->

    <!-- Text Colors -->
    <color name="textColorPrimaryOnWhite">@color/dark_gray</color> <!-- Primary text on light backgrounds -->
    <color name="textColorSecondaryOnWhite">@color/medium_gray</color> <!-- Secondary text on light backgrounds -->
    <color name="textColorPrimaryOnDark">@color/white</color> <!-- Primary text on dark backgrounds (e.g., on primaryColor button) -->

    <!-- Status Bar Color (can be primaryDarkColor or specific if needed) -->
    <color name="statusBarColor">@color/primaryDarkColor</color>

    <!-- Background Colors -->
    <color name="windowBackgroundColor">@color/white</color>
    <color name="surfaceColor">@color/white</color> <!-- Cards, Sheets, Menus -->
    <color name="appBarBackgroundColor">@color/primaryColor</color>

    <!-- Error Color -->
    <color name="errorColor">#D32F2F</color> <!-- Standard Material error red -->

    <!-- For subtle text or disabled states -->
    <color name="almost_black">#FF212121</color> <!-- Very dark gray -->
    <color name="very_light_gray">#FFF5F5F5</color> <!-- For light surfaces or dividers -->
    <color name="medium_gray_text">#FF757575</color> <!-- For secondary text -->

    <!-- Semantic Colors - Light Theme -->
    <color name="lt_colorPrimary">@color/black</color>
    <color name="lt_colorPrimaryVariant">@color/black</color>
    <color name="lt_colorOnPrimary">@color/white</color>
    <color name="lt_colorSecondary">@color/almost_black</color>
    <color name="lt_colorSecondaryVariant">@color/almost_black</color>
    <color name="lt_colorOnSecondary">@color/white</color>
    <color name="lt_colorBackground">@color/white</color>
    <color name="lt_colorOnBackground">@color/black</color>
    <color name="lt_colorSurface">@color/white</color>
    <color name="lt_colorOnSurface">@color/black</color>
    <color name="lt_colorError">@color/black</color> <!-- Using black for error for simplicity, typically red -->
    <color name="lt_colorOnError">@color/white</color>

    <!-- Semantic Colors - Dark Theme -->
    <color name="dt_colorPrimary">@color/white</color>
    <color name="dt_colorPrimaryVariant">@color/white</color>
    <color name="dt_colorOnPrimary">@color/black</color>
    <color name="dt_colorSecondary">@color/very_light_gray</color>
    <color name="dt_colorSecondaryVariant">@color/very_light_gray</color>
    <color name="dt_colorOnSecondary">@color/black</color>
    <color name="dt_colorBackground">@color/black</color>
    <color name="dt_colorOnBackground">@color/white</color>
    <color name="dt_colorSurface">@color/almost_black</color> <!-- Surface slightly lighter than background -->
    <color name="dt_colorOnSurface">@color/white</color>
    <color name="dt_colorError">@color/white</color> <!-- Using white for error for simplicity -->
    <color name="dt_colorOnError">@color/black</color>

</resources>
