<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".sessions.SessionsFragment">

    <LinearLayout
        android:id="@+id/main_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sessionActionsLayout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/sessionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Session"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/finishBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#424242"
                android:text="Finish"
                android:textColor="@android:color/white"
                android:visibility="gone"
                app:cornerRadius="8dp"
                tools:visibility="visible" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/timerCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="#F0F0F0"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/toggleGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:checkedButton="@id/pomodoroBtn"
                            app:selectionRequired="true"
                            app:singleSelection="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/pomodoroBtn"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Pomodoro"
                                android:textColor="@color/toggle_button_text_color"
                                android:textSize="12sp"
                                app:backgroundTint="@color/toggle_button_background_color"
                                app:strokeWidth="0dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/shortBreakBtn"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Short Break"
                                android:textColor="@color/toggle_button_text_color"
                                android:textSize="12sp"
                                app:backgroundTint="@color/toggle_button_background_color"
                                app:strokeWidth="0dp"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/longBreakBtn"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Long Break"
                                android:textColor="@color/toggle_button_text_color"
                                android:textSize="12sp"
                                app:backgroundTint="@color/toggle_button_background_color"
                                app:strokeWidth="0dp"/>

                        </com.google.android.material.button.MaterialButtonToggleGroup>

                        <TextView
                            android:id="@+id/timerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="25:00"
                            android:textColor="#424242"
                            android:textSize="72sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="24dp"
                            android:text="Time: 0m0s"
                            android:textColor="#424242" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/startBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:backgroundTint="#424242"
                            android:text="Start"
                            android:textColor="@android:color/white"
                            app:cornerRadius="8dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tasksLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Tasks"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sessionTodoRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sessionActionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/btn_add_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            app:backgroundTint="@color/pokus_gray"
            android:text="Add New Task" />

        <Button
            android:id="@+id/btn_import_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            app:backgroundTint="@color/pokus_gray"
            android:text="Import Task" />
    </LinearLayout>

</RelativeLayout>